@page
@model MyCrud.Pages.baleros.IndexModel
@{
}

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.1/css/jquery.dataTables.css">

<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.js"></script>


<br />
<h2>Lista de Baleros</h2> <br />
<a class='btn btn-primary btn-lg' href="/baleros/CrearBalero">Nuevo Balero</a><!--la referencia aun no exite, se creara mas tarde--><br /><br />
<table class="table table-hover" id="table_id">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Marca</th>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Fecha Registro</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody class="table-group-divider">
        @foreach(var item in Model.listaBaleros)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Marca</td>
                <td>@item.Nombre</td>
                <td>@item.Precio</td>
                <td>@item.Fecha_create</td>
                <td>
                    <a class="btn btn-success btn-m" href="baleros/Editar?Id=@item.Id">Editar</a><!--aun falta crear los modelos para estos metodos-->
                    <a class="btn btn-outline-danger btn-m" href="/baleros/Eliminar?Id=@item.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts{
<script>
    $(document).ready(function () {
            $('#table_id').DataTable();
    });
</script>
}